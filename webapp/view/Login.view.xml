<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="cot.controller.Login">
	<App>
		<pages>
			<Page class="coTLoginView" showSubHeader="false" showHeader="false" enableScrolling="false">
				<content>
					<Link id="__link0"/>
					<!-- Label text="Username" id="__label0" class="coTUserNameLabel"/ -->
					<Input width="80%" id="username" value="testweb2"  textAlign="Begin" class="coTUserName" />
					<!-- Label text="Password" id="__label1" class="coTPasswordLabel"/ -->
					<Input width="80%" id="password" value="toronto" type="Password" class="coTPassword" />
					<HBox width="100%" id="__hbox0" alignContent="Center" alignItems="Center">
						<items>
							<core:InvisibleText text="InvisibleText" id="__text0" width="100px"/>
							<Button width="80%" text="Remember me" id="rememberMeButtonId" press="onRemember" class="coTRememberMe" align="center" type="Transparent"/>
							<Button width="80%" text="Sign in" id="loginButtonId" press="onLogin" class="coTLoginButton" type="Accept" align="center"/>
						</items>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>