<mvc:View controllerName="cot.controller.Master" displayBlock="true" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page id="page" title="{i18n>masterTitle}">
		<headerContent>
			<core:Icon id="masterIcon" src="sap-icon://alert" visible="{device>/isOffline}"></core:Icon>
		</headerContent>
		<subHeader>
			<Bar id="searchBar">
				<contentMiddle>
					<SearchField id="searchField" showRefreshButton="{device>/isNoTouch}" placeholder="{i18n>masterSearchPlaceholder}" search="onSearch"
						tooltip="{i18n>masterSearchTooltip}" width="100%"></SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<List id="list" items="{/ApprovalReqSet}" mode="{device>/listMode}" noDataText="{i18n>masterListNoDataText}" select="onSelect"
				growing="true" growingScrollToLoad="true">
				<items>
					<ObjectListItem type="{device>/listItemType}" press="onSelect" title="{approvalSubject}" number="{approver}" numberUnit="{approvalType}"></ObjectListItem>
				</items>
			</List>
		</content>
		<footer>
			<Toolbar>
				<content>
					<Button icon="sap-icon://error" text="{device>/errorNum}" visible="{parts:[{path:'device>/errorNum'}], formatter:'.onErrorBTVisible'}"
						press="onErrorPress"/>
					<Button icon="sap-icon://refresh" press="refreshData"></Button>
					<ToolbarSpacer/>
					<Button icon="sap-icon://add" press="addItem"></Button>
				</content>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>