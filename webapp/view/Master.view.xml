<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:unified="sap.ui.unified" xmlns:l="sap.ui.layout" controllerName="cot.controller.Master" displayBlock="true">
    <Page id="page" title="{i18n>masterTitle}">
        <headerContent>
            <core:Icon id="masterIcon" src="sap-icon://alert" visible="{device>/isOffline}"/>
        </headerContent>
        <subHeader visible="false">
            <Bar id="searchBar" visible="false">
                <contentMiddle>
                    <SearchField id="searchField" showRefreshButton="{device>/isNoTouch}" placeholder="{i18n>masterSearchPlaceholder}" search="onSearch" tooltip="{i18n>masterSearchTooltip}" width="100%"/>
                </contentMiddle>
            </Bar>
        </subHeader>
        <content>
	            <List id="list" items="{requests>/}" select="onSelect" mode="{device>/listMode}" noDataText="{i18n>masterListNoDataText}">
                    <StandardListItem type="{device>listItemType}" title="{requests>approvalSubject}" description="" 
                          icon="images/{requests>priority}.png" iconDensityAware="false" iconInset="true" class="coTAppRequest"/>
                <swipeContent>
                    <l:HorizontalLayout>
                        <Button text="" type="Reject" class="coTApproveBtn" press="onReject" icon="images/declineImg.png" width="145px"/>
                        <Button text="" type="Accept" class="coTDeclineeBtn" press="onApprove" icon="images/approveImg.png" width="145px"/>
                    </l:HorizontalLayout>
                </swipeContent>
            </List>
        </content>
        <footer>
            <Toolbar>
                <content>
                  <Button icon="sap-icon://error" text="{device>/errorNum}" visible="{parts:[{path:'device>/errorNum'}], formatter:'.onErrorBTVisible'}" press="onErrorPress"/>
                  <l:HorizontalLayout>
                    <Button class="coTLogout" press="onLogout" icon="images/logout.png" width="115px"/>
                    <Button class="coTSearch" press="onSearch" icon="images/search.png" width="104px"/>
                    <Button class="coTApproveAll" press="onApproveAll" icon="images/approveAll.png" width="166px"/>
                    <!-- Button class="coTMore" press="onMore"/ -->
                    <Button press="onRefreshData" icon="images/more.png" width="76px"/>
                  </l:HorizontalLayout>
                    <!-- Button icon="sap-icon://add" press="addItem"></Button -->
                </content>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>