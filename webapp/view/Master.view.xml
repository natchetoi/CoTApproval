<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="cot.controller.Master" displayBlock="true">
	<Page id="page" title="{i18n>masterTitle}">
		<headerContent>
			<core:Icon id="masterIcon" src="sap-icon://alert" visible="{device>/isOffline}"/>
		</headerContent>
		<subHeader>
			<Bar id="searchBar">
				<contentMiddle>
					<SearchField id="searchField" showRefreshButton="{device>/isNoTouch}" placeholder="{i18n>masterSearchPlaceholder}" search="onSearch" tooltip="{i18n>masterSearchTooltip}" width="100%"/>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<List id="list" items="{/ApprovalReqSet}" select="onSelect" mode="{device>/listMode}" noDataText="{i18n>masterListNoDataText}" >
				<items>
					<StandardListItem type="{device>/listItemType}" press="onSelect" detailPress="onAction" 
						title="{approvalSubject}" 
						description="{ApprovalSummary}"
						icon="images/CAB.png"
						iconDensityAware="false"
						iconInset="false" 
					>
					</StandardListItem>
					<!-- InputListItem label="Act"  visible="false" >
						<content>
							<Button text="Deny" press="deny" />
							<Button text="Approve" press="approve"   />
						</content>
					</InputListItem -->
				</items>
			</List>
		</content>
		<footer>
			<Toolbar>
				<content>
					<Button icon="sap-icon://error" text="{device>/errorNum}" visible="{parts:[{path:'device>/errorNum'}], formatter:'.onErrorBTVisible'}" press="onErrorPress"/>
					<Button icon="sap-icon://refresh" press="refreshData"/>
					<ToolbarSpacer/>
					<!-- Button icon="sap-icon://add" press="addItem"></Button -->
				</content>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>